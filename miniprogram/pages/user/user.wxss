/* pages/user/user.wxss */
@charset 'UTF-8';

.user {
    flex-direction: column;
}

.user > view {
    margin-bottom: 32rpx;
}

.user-info {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 32rpx 0;
    background: #ef4566;
}

.user-info .user-avatar {
    position: relative;
    width: 128rpx;
    height: 128rpx;
}

.user-info .user-avatar image {
    position: relative;
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
}

.user-info .user-avatar text {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    color: #fff;
    background: #83ae9b;
    border-radius: 50%;
}

.user-info .user-nickname {
    font-size: 1.2em;
    font-weight: 700;
}

.user-items {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 64rpx;
    padding: 0 38rpx;
    border-top: 1px solid #d8d8d8;
    border-bottom: 1px solid #d8d8d8;
    box-sizing: border-box;
}
