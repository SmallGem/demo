/** pages/index/index.wxss **/
@charset 'UTF-8';
@import '../../weui/searchbar.wxss';

.index {
    position: relative;
    display: flex;
    flex-direction: column;
}

.index .catalogs-and-items {
    position: relative;
    display: flex;
    flex-direction: row;
}

.index .scroll {
    position: relative;
    height: 100%;
}

.index .catalog-wrapper {
    position: relative;
    flex: 3;    
    border-right: 1px solid #d8d8d8;
    box-sizing: border-box;
}

.index .catalog-wrapper .catalog {
    position: relative;
    width: 100%;
    height: 64rpx;
    padding: 0 32rpx;
    font-size: 1.2em;
    line-height: 64rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    border-bottom: 1px solid #d8d8d8;
    overflow: hidden;
}

.index .catalog-wrapper .catalog.active {
    position: relative;
    background: #f69a9a;
}

.index .item-wrapper {
    position: relative;
    flex: 7;
}
